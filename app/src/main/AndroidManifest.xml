<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mac.velad">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".diary.NoteActivity"
            android:label="@string/note_activity_title" />
        <activity
            android:name=".settings.ProfileActivity"
            android:label="@string/profile_activity_title" />
        <activity
            android:name=".today.groups.GroupsActivity"
            android:label="@string/groups_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".today.groups.BasicPointsActivity"
            android:label="@string/group_activity_title"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />
    </application>

</manifest>